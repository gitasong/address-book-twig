<html>
<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
    <title>My Contacts</title>
</head>
<body>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-6 display">
                    <h1>My Contacts</h1>

                    {% if contacts is not empty %}
                        {% for contact in contacts %}
                        <h3>{{ contact.getLastName }}, {{ contact.getFirstName }}</h3>
                        <ul>
                            <li><strong>Street:</strong> {{ contact.getStreet }}</li>
                            <li><strong>City:</strong> {{ contact.getCity }}</li>
                            <li><strong>State:</strong> {{ contact.getState }}</li>
                            <li><strong>Zip/Postal Code:</strong> {{ contact.getZip }}</li>
                            <li><strong>Phone:</strong> {{ contact.getPhone }}</li></li>
                        </ul>
                        {% endfor %}
                        <form action='/delete_contacts' method='post'>
                            <button type='submit' class="btn btn-danger">Clear All</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6 main">
                    <h2>Add A Contact</h2>
                    <form action='/create_contact' method='post'>
                        <div class="form-group">
                            <label for='first_name'>First Name:</label>
                            <input id='first_name' class="form-control" name='first_name' type='text' placeholder='Jane'>
                        </div>
                        <div class="form-group">
                            <label for='last_name'>Last Name:</label>
                            <input id='last_name' class="form-control" name='last_name' type='text' placeholder='Doe'>
                        </div>
                        <div class="form-group">
                            <label for='street'>Street Address:</label>
                            <input id='street' class="form-control" name='street' type='text' placeholder='123 Anywhere St.'>
                        </div>
                        <div class="form-group">
                            <label for='city'>City:</label>
                            <input id='city' class="form-control" name='city' type='text' placeholder='Anytown'>
                        </div>
                        <div class="form-group">
                            <label for='state'>State:</label>
                            <input id='state' class="form-control" name='state' type='text' placeholder="IL">
                        </div>
                        <div class="form-group">
                            <label for='zip'>Zip/Postal Code:</label>
                            <input id='zip' class="form-control" name='zip' type='text' placeholder="01234">
                        </div>
                        <div class="form-group">
                            <label for='phone'>Phone:</label>
                            <input id='phone' class="form-control" name='phone' type='text' placeholder="555-555-1212">
                        </div>
                        <br />
                        <button type='submit' class="btn btn-primary">Add Contact</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
